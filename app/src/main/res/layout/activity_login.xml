<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCF8E8"
    android:backgroundTint="#FCF8E8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical" >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="19dp"
                    android:backgroundTint="#00FFFFFF"
                    android:tint="#000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
                    tools:ignore="MissingConstraints,UseAppTint" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="267dp"
                    android:layout_height="53dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Login"
                    android:textColor="#94B49F"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/txtError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="60dp"
                android:textColor="#DF7861"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:text="Email"
                android:textColor="#ECB390"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/txtEmailLog"
                android:layout_width="332dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:ems="10"
                android:inputType="text"
                android:text="mariorossi@gmail.com"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/lblPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:text="Password"
                android:textColor="#ECB390"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/txtPassLog"
                android:layout_width="332dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:ems="10"
                android:inputType="textPassword"
                android:text=""
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="258dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#DF7861"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblOP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="6dp"
                    android:text="Non hai un account?"
                    android:textColor="#94B49F"
                    android:textSize="22sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btnRegist"
                    android:layout_width="127dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="31dp"
                    android:backgroundTint="#94B49F"
                    android:text="Registrati"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>