<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00251a"
    android:backgroundTint="#00251a">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical" >

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSpecie"
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="18dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00695c">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/btnClose"
                        android:layout_width="72dp"
                        android:layout_height="74dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="#00FFFFFF"
                        android:tint="#FFFFFF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@mipmap/ic_backarr3_foreground"
                        tools:ignore="MissingConstraints,UseAppTint" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="267dp"
                        android:layout_height="53dp"
                        android:layout_marginStart="66dp"
                        android:layout_marginTop="10dp"
                        android:text="Aggiungi Pet"
                        android:textColor="#FFFFFF"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Nome"
            android:textStyle="bold"
            android:textColor="#DF7861"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/txtNome"
            android:layout_width="328dp"
            android:layout_height="53dp"
            android:layout_marginStart="32dp"
            android:ems="10"
            android:hint="Fido"
            android:inputType="textPersonName"
            android:textColor="#ECB390"
            android:textSize="28sp"
            android:textColorHint="#00695c"
            android:backgroundTint="#00695c"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Specie"
            android:textStyle="bold"
            android:textColor="#DF7861"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_popup_background"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Residenza"
            android:textStyle="bold"
            android:textColor="#DF7861"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtPos"
            android:layout_width="336dp"
            android:layout_height="53dp"
            android:layout_marginStart="32dp"
            android:ems="10"
            android:hint="via Rossi 67, Gambettola FC"
            android:textColorHint="#00695c"
            android:backgroundTint="#00695c"
            android:inputType="text|textPostalAddress"
            android:textColor="#ECB390"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Descrizione"
            android:textStyle="bold"
            android:textColor="#DF7861"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/txtDescr"
            android:layout_width="332dp"
            android:layout_height="53dp"
            android:layout_marginStart="32dp"
            android:ems="10"
            android:textColorHint="#00695c"
            android:backgroundTint="#00695c"
            android:hint="Sono un cane bello e mi piace uscire."
            android:inputType="text"
            android:textColor="#ECB390"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Immagine"
            android:textStyle="bold"
            android:textColor="#DF7861"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnAddPetImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#00695c"
                android:text="scegli"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgPetAdd"
                android:layout_width="210dp"
                android:layout_height="75dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/btnAddPetImage"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

        </androidx.constraintlayout.widget.ConstraintLayout>





        <Button
            android:id="@+id/btnAddPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="234dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#DF7861"
            android:text="Aggiungi"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>